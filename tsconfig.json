{
    "compilerOptions": {
        "locale": "en",
        "target": "es2018",
        "lib": [ "es2017" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "sourceRoot": "src",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "include": [ "./src/**/*", "./typings/**/*" ],
    "exclude": [ "node_modules" ]
}
